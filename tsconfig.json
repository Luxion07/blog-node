{
  "compilerOptions": {
    "allowJs": true,   // Разрешает работу с .js файлами
    "checkJs": false,  // Не проверяет ошибки в .js файлах
    "outDir": "./dist",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"], // Добавляем поддержку как .ts, так и .js
  "exclude": ["node_modules"]
}